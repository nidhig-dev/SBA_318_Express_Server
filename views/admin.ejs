            <input type="submit" name="allBook" class="adminBtn" value="Book inventory" />
        </form>
        <form  action="/" method="GET"></form>
            <input type="submit" name="addBook" class="adminBtn" value="Add a book" />
        </form>
        <form  action="/" method="GET"></form>
            <input type="submit" name="delBook" class="adminBtn" value="Delete a book" />
        </form>
        <form  action="/" method="GET"></form>
            <input type="submit" name="updateBook" class="adminBtn" value="Update a book" />
        </form>
    </div>
</body>

</html>